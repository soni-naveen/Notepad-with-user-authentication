<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Notes App</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 20px;
    }

    h1 {
      text-align: center;
    }

    ul {
      list-style-type: none;
      width: 50%;
      margin: auto;
      padding: 0;
    }

    li {
      background-color: #f2f2f2;
      padding: 2px 40px;
      margin-bottom: 5px;
      border-radius: 5px;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    form {
      margin-top: 20px;
      text-align: center;
    }

    .btn-cont {
      width: 30%;
      margin: auto;
      display: flex;
      align-items: center;
      justify-content: center;
      margin-bottom: 20px;
    }

    input {
      width: 30%;
      padding: 8px;
      margin-bottom: 10px;
      display: inline;
      margin: auto;
      margin-bottom: 10px;
      box-sizing: border-box;
    }

    button {
      background-color: #56abdf;
      display: inline-block;
      color: white;
      padding: 10px;
      border: none;
      border-radius: 3px;
      cursor: pointer;
    }

    button:hover {
      background-color: #59c65e;
    }

    .get-btn {
      padding: 5px;
      margin-right: 15px;
      font-size: 12px;
    }

    .delete-btn {
      background-color: #f44336;
    }

    .delete-btn:hover {
      background-color:
        #d32f2f;
    }
  </style>
</head>

<body>
  <form action="/addnote" method="POST">
    <label for="content">
      <h1>NOTES :</h1>
    </label>
    <input type="text" id="content" name="content" placeholder="Write a note" required />
    <button type="submit">Add Note</button>
  </form>
  <div class="btn-cont">
    <form action="/getnotes" method="GET">
      <button class="get-btn" type="submit">Get
        Notes</button>
    </form>
    <form action="/logout" method="get">
      <button style="background-color: rgb(222, 88, 88); padding: 5px; font-size: 12px;">Logout</button>
    </form>
  </div>
  <ul>
    {{#each notes}}
    <li>
      <span>{{content}}</span>
      <form action="/deletenote" method="POST" style="display:inline;">
        <input type="hidden" name="noteId" value="{{_id}}" />
        <button class="delete-btn" type="submit">Delete</button>
      </form>
    </li>
    {{/each}}
  </ul>
</body>

</html>